<?xml version="1.0" encoding="utf-8"?><!--本地横向显示模板3-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/llyt_local_template_7"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:visibility="gone">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:background="#FEFCFE"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_title_t7"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:minWidth="@dimen/dp_360"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:text=""
                android:textColor="#377938"
                android:textSize="@dimen/sp_28"/>

            <TextView
                android:id="@+id/tv_service_name_t7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_weight="2.5"
                android:background="@drawable/frame_green_service_name_t6"
                android:gravity="center"
                android:text=""
                android:textColor="@color/black_color"
                android:textSize="@dimen/sp_38"/>

            <TextView
                android:id="@+id/tv_date_and_week_t7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:gravity="center"
                android:text=""
                android:textColor="@color/black_color"
                android:textSize="@dimen/sp_28"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp_5"
                android:background="@drawable/frame_green_time_t6"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_30">

                <ImageView
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="@dimen/dp_80"
                    android:background="@mipmap/ic_time"/>

                <TextView
                    android:id="@+id/tv_time_t7"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:gravity="center"
                    android:text="00:00"
                    android:textColor="@color/black_color"
                    android:textSize="@dimen/sp_36"
                    android:textStyle="bold"/>

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"
            android:background="@drawable/frame_green_content_bg_t6">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_25"
                android:background="@drawable/frame_green_content_bg2_t6"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp_45"
                android:layout_marginLeft="@dimen/dp_35"
                android:layout_marginRight="@dimen/dp_35"
                android:layout_marginTop="@dimen/dp_55"
                android:background="@drawable/frame_green_content_bg3_t6"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp_55"
                android:layout_marginLeft="@dimen/dp_45"
                android:layout_marginRight="@dimen/dp_45"
                android:layout_marginTop="@dimen/dp_65"
                android:background="@drawable/frame_white_content_bg_t6"
                android:orientation="horizontal"
                android:padding="@dimen/dp_10">

                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    app:cardBackgroundColor="#E2E2E1"
                    app:cardCornerRadius="@dimen/dp_8"
                    app:cardElevation="@dimen/dp_2"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true"
                    app:contentPadding="@dimen/dp_5">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="5"
                            app:cardBackgroundColor="#f0f0f0"
                            app:cardCornerRadius="@dimen/dp_2"
                            app:cardElevation="@dimen/dp_1"
                            app:cardPreventCornerOverlap="true"
                            app:cardUseCompatPadding="true">

                            <ImageView
                                android:id="@+id/iv_head_t7"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:adjustViewBounds="true"
                                android:background="@drawable/frame_gray_head_t6"
                                android:padding="@dimen/dp_2"
                                android:scaleType="centerCrop"
                                android:src="@mipmap/person"/>

                        </android.support.v7.widget.CardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="2"
                            android:orientation="vertical">

                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                app:cardBackgroundColor="#CDCCC8"
                                app:cardCornerRadius="@dimen/dp_5"
                                app:cardElevation="@dimen/dp_1"
                                app:cardPreventCornerOverlap="true"
                                app:cardUseCompatPadding="true">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/frame_gray_staff_t6"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:background="@drawable/frame_green_staff_t6"
                                        android:gravity="center"
                                        android:text="姓  名"
                                        android:textColor="@color/black_color"
                                        android:textSize="@dimen/sp_26"/>

                                    <TextView
                                        android:id="@+id/tv_doc_name_t7"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="2.2"
                                        android:gravity="center"
                                        android:text=""
                                        android:textColor="@color/black_color"
                                        android:textSize="@dimen/sp_30"/>

                                </LinearLayout>
                            </android.support.v7.widget.CardView>

                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                app:cardBackgroundColor="#CDCCC8"
                                app:cardCornerRadius="@dimen/dp_5"
                                app:cardElevation="@dimen/dp_1"
                                app:cardPreventCornerOverlap="true"
                                app:cardUseCompatPadding="true">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/frame_gray_staff_t6"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:background="@drawable/frame_green_staff_t6"
                                        android:gravity="center"
                                        android:text="职  称"
                                        android:textColor="@color/black_color"
                                        android:textSize="@dimen/sp_26"/>

                                    <TextView
                                        android:id="@+id/tv_job_title_t7"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="2.2"
                                        android:gravity="center"
                                        android:text=""
                                        android:textColor="@color/black_color"
                                        android:textSize="@dimen/sp_30"/>

                                </LinearLayout>

                            </android.support.v7.widget.CardView>

                        </LinearLayout>


                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <View
                    android:layout_width="@dimen/dp_8"
                    android:layout_height="match_parent"/>

                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    app:cardBackgroundColor="#E2E2E1"
                    app:cardCornerRadius="@dimen/dp_8"
                    app:cardElevation="@dimen/dp_2"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true"
                    app:contentPadding="@dimen/dp_6">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/frame_gray_call_bg_t6"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_counter_no_t7"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/frame_green_counter_name_t6"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/white_color"
                            android:textSize="@dimen/sp_60"/>

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_margin="@dimen/dp_3"
                            android:layout_weight="3.6"
                            app:cardBackgroundColor="#CDCCC8"
                            app:cardCornerRadius="@dimen/dp_5"
                            app:cardElevation="@dimen/dp_2"
                            app:cardPreventCornerOverlap="true"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/frame_gray_call_bg2_t6"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1">

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:background="@drawable/frame_orange_curr_call_t6"
                                        android:gravity="center"
                                        android:text="正在办理"
                                        android:textColor="@color/black_color"
                                        android:textSize="@dimen/sp_40"/>

                                    <TextView
                                        android:id="@+id/tv_curr_call_t7"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="3"
                                        android:background="@drawable/frame_orange_curr_call_value_t6"
                                        android:gravity="center"
                                        android:text=""
                                        android:textColor="#02803E"
                                        android:textSize="@dimen/sp_80"/>

                                </LinearLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/dp_2"
                                    android:background="#FEFFFF"/>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1">

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:background="@drawable/frame_orange_next_call_t6"
                                        android:gravity="center"
                                        android:text="等候办理"
                                        android:textColor="@color/black_color"
                                        android:textSize="@dimen/sp_40"/>

                                    <TextView
                                        android:id="@+id/tv_next_call_t7"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="3"
                                        android:background="@drawable/frame_orange_next_call_value_t6"
                                        android:gravity="center"
                                        android:text=""
                                        android:textColor="#E99932"
                                        android:textSize="@dimen/sp_80"/>

                                </LinearLayout>

                            </LinearLayout>
                        </android.support.v7.widget.CardView>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>


    <!--滚动文字-->
    <com.qianjinzhe.lcd_display.ui.widget.MarqueeText
        android:id="@+id/tv_marquee_text_t7"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:background="#F2E32E"
        android:gravity="center"
        android:maxLines="1"
        android:text=""
        android:textColor="@color/black_color"
        android:textSize="@dimen/sp_28"/>


</LinearLayout>