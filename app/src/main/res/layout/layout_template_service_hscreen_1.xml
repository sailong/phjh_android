<?xml version="1.0" encoding="utf-8"?><!--本地窗口横向模板1-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/llyt_local_template_2"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:visibility="gone"
              android:orientation="vertical">
    <!--标题部分-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@color/color_deep_blue"
        android:gravity="center">

        <ImageView
            android:layout_width="@dimen/dp_76"
            android:layout_height="@dimen/dp_76"
            android:layout_marginRight="@dimen/dp_10"
            android:adjustViewBounds="true"
            android:visibility="gone"
            android:src="@mipmap/ic_hospital"/>

        <TextView
            android:id="@+id/tv_title_h1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/white_color"
            android:textStyle="bold"
            android:textSize="@dimen/sp_70"/>

    </LinearLayout>

    <!--中间部分-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:background="@drawable/color_blue_shade"
        android:padding="@dimen/dp_8">

        <!--个人信息部分-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:background="@drawable/frame_gray_white"
                android:gravity="center"
                android:padding="@dimen/dp_5">

                <ImageView
                    android:id="@+id/iv_head_h1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/person"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_5"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/frame_gray_white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_name_h1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.5"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#001746"
                    android:textSize="@dimen/sp_50"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="top"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_15">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="工号："
                        android:textColor="#2D3D4C"
                        android:textSize="@dimen/sp_36"/>

                    <TextView
                        android:id="@+id/tv_job_no_h1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#2D3D4C"
                        android:textSize="@dimen/sp_36"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="@dimen/dp_5"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.2"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.2"
                android:background="@drawable/frame_gray_white"
                android:orientation="horizontal"
                android:padding="@dimen/dp_8">

                <TextView
                    android:id="@+id/tv_counter_no_h1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/frame_blue_local_temp_2"
                    android:gravity="center"
                    android:minWidth="@dimen/dp_240"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_15"
                    android:text=""
                    android:textColor="@color/white_color"
                    android:textSize="@dimen/sp_120"/>

                <TextView
                    android:id="@+id/tv_service_name_h1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3.5"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/color_service_name"
                    android:textSize="@dimen/sp_80"
                    android:textStyle="bold"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_5"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2.2"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/frame_gray_white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="正在办理"
                            android:textColor="#950C1E"
                            android:textSize="@dimen/sp_70"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Processing"
                            android:textColor="#950C1E"
                            android:textSize="@dimen/sp_46"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_curr_call_h1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text=""
                        android:textColor="#E40E1A"
                        android:textSize="@dimen/sp_110"
                        android:textStyle="bold"/>

                </LinearLayout>

                <View
                    android:layout_width="@dimen/dp_5"
                    android:layout_height="match_parent"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/frame_gray_white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="下一位"
                            android:textColor="#244C91"
                            android:textSize="@dimen/sp_60"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Next Person"
                            android:textColor="#244C91"
                            android:textSize="@dimen/sp_36"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_next_call_h1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text=""
                        android:textColor="#124DB5"
                        android:textSize="@dimen/sp_90"/>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!--滚动文字-->
    <com.qianjinzhe.lcd_display.ui.widget.MarqueeText
        android:id="@+id/tv_marquee_text_h1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/color_deep_blue"
        android:gravity="center"
        android:maxLines="1"
        android:text=""
        android:textColor="@color/white_color"
        android:textSize="@dimen/sp_28"/>

</LinearLayout>